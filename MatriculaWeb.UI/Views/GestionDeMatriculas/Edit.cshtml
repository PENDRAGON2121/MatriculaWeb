@model MatriculaWeb.UI.Models.Estudiante

@{
    ViewData["Title"] = "Edit";
}

<style>
    h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    .back-link {
        margin-top: 10px;
    }
</style>

<h1>Editar los Datos</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cedula" style="font-weight: bold;">Cédula</label>
                <input asp-for="Cedula" class="form-control" value="@Model.Cedula" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" style="font-weight: bold;">Nombre</label>
                <input asp-for="Nombre" class="form-control" value="@Model.Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimerApellido" style="font-weight: bold;">Primer Apellido</label>
                <input asp-for="PrimerApellido" class="form-control" value="@Model.PrimerApellido" />
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SegundoApellido" style="font-weight: bold;">Segundo Apellido</label>
                <input asp-for="SegundoApellido" class="form-control" value="@Model.SegundoApellido" />
                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" style="font-weight: bold;">Género</label>
                <select asp-for="Sexo" class="form-control">
                    <option value="1">Masculino</option>
                    <option value="2">Femenino</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeNacimiento" style="font-weight: bold;">Fecha de Nacimiento</label>
                <input asp-for="FechaDeNacimiento" class="form-control" />
                <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaMadre" style="font-weight: bold;">Cédula de la Madre</label>
                <input asp-for="CedulaMadre" class="form-control" />
                <span asp-validation-for="CedulaMadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaPadre" style="font-weight: bold;">Cédula del Padre</label>
                <input asp-for="CedulaPadre" class="form-control" />
                <span asp-validation-for="CedulaPadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" style="background-color: #007bff; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; margin-right: 10px;">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
